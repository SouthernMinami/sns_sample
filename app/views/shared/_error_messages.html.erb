<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力内容に<%= pluralize(@user.errors.count, "箇所") %>誤りがございます
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
